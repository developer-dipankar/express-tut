<!DOCTYPE html>
<html lang="en">
    <% include ../partials/head %>
<body>
    <% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                        
                    <% if(messages.validation_error){ %>
                        <p><%= JSON.stringify(messages.validation_error) %></p>
                    <% } %>

                    <% if(messages.success){ %>
                        <p><%= JSON.stringify(messages.success) %></p>
                    <% } %>

                    <% if(messages.error){ %>
                        <p><%= JSON.stringify(messages.error) %></p>
                    <% } %>
                    
                    <div class="panel-heading">
                        Registration
                    </div>
                    <div class="panel-body">
                        <div class="col-lg-12">
                            <form id="register-form" method="post" action="post-register" role="form">
                                <div class="form-group">
                                    <input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" value="">
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="confirm-password" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" class="form-control btn btn-primary" value="Register Now">
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <a href="/auth/facebook">Login with Facebook</a>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </div>
    <% include ../partials/footer %>    
</body>
</html>